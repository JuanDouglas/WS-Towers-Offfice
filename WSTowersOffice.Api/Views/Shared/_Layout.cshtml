<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - WS Towers Office</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @if (ViewBag.ModalID != null)
    {
        <!--Chamada do modal -->
    <script type="text/javascript">
            function onLoad() {
                $('@ViewBag.ModalID').modal('show');
            }
    </script>
    }
</head>
<body onload="onLoad()">
    <nav class="navbar navbar-expand-sm sticky-top navbar-dark">

        <a href="@Url.Action("Index","Home")">
            <img src="~/Resources/ws_white.png" alt="WS TOWERS OFFICE" style="width:60px;" />
        </a>
        <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2">

            <ul class="nav navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("Times", "", "Teams", null, new { @class = "nav-link info" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Funcionários", "List", "Employees", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Sobre", "About", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Ajuda", "", "Help", null, new { @class = "nav-link" })
                </li>
            </ul>
        </div>
        <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item ml-auto align-items-sm-end">
                    <button class="btn" id="btn-log"><img src="~/Resources/sign-in-alt.svg" height="25px" width="25px" /></button>
                </li>
            </ul>
        </div>
    </nav>

    <div class="body-content">
        <!--Esse codigo rederiza o resto da pagina que será definido em outro arquivo cshtml -->
        @RenderBody()
        <!-- Após rederizar a tela o código seguinte será rederizado -->
    </div>
    <footer class="footer-custom">
        <h5 class="footer">&copy; @DateTime.Now.Year - WS Corp.</h5>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
