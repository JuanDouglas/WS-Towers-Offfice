<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - WS Towers Office</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        @Html.ActionLink("WS Towers Office", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbar">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">@Html.ActionLink("Início", "Index", "Home")</li>
                <li class="nav-item">@Html.ActionLink("Sobre", "About", "Home")</li>
                <li class="nav-item">@Html.ActionLink("Contato", "Contact", "Home")</li>
                <li class="nav-item">@Html.ActionLink("Teams", "ListTeams", "Team")</li>
                
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Dropdown</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#">Action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <a class="dropdown-item" href="#">Something else here</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Separated link</a>
                    </div>
                </li>
            </ul>
        </div>

        <div class="navbar-collapse collapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">@Html.ActionLink("Início", "Index", "Home")</li>
                <li class="nav-item">@Html.ActionLink("Sobre", "About", "Home")</li>
                <li class="nav-item">@Html.ActionLink("Contato", "Contact", "Home")</li>
                <li class="nav-item">@Html.ActionLink("Teams", "ListTeams", "Team")</li>
            </ul>
        </div>
    </nav>



    <div class="container body-content">
        <!--Esse codigo rederiza o resto da pagina que será definido em outro arquivo cshtml -->
        @RenderBody()
        <!-- Após rederizar a tela o código seguinte será rederizado -->
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - WS Corp.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
